upstream ui {
    server ui;
}

upstream app {
    server app;
}

server {
    listen 80;

    location / {
        proxy_pass http://ui;
    }

    location /api/ {
        rewrite /api/(.*) /$1 break;
        proxy_pass http://app;
    }

    location ~* \.(dec|zdec)$ {
        root /data/crg;
    }

    location /remote/ {
        rewrite /remote/(.*) $1?apikey=${CRG_REOMTE_APIKEY} break;
        proxy_pass ${CRG_REMOTE_HOST};
        proxy_set_header Host ${CRG_REMOTE_HOST};
    }

    location /scrape {
        proxy_pass ${SCRAPE_HOST};
        proxy_set_header Host ${SCRAPE_HOST};
    }
}
